<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.chun.guns.common.DemoUserDAO">
    <resultMap id="vo" type="org.chun.guns.common.DemoUser">

    </resultMap>

    <sql id="getAll">
        SELECT
            USER_NUM,
            USER_NAME,
            USER_GENDER
        FROM DEMO_USER
    </sql>

    <select id="getAll" resultMap="vo">
        <include refid="getAll"/>
    </select>

    <select id="getById" resultMap="vo">
        <include refid="getAll"/>
        WHERE USER_NUM = #{userNum}
    </select>
</mapper>